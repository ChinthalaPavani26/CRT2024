#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    int n;
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
        for(int j = 1;j <= i;j++)
        {
            printf("* ");
        }
        printf("\n");
    }
    int k = n/3;
    for(int i =1;i<=n-1;i++)
    {
        for(int j = 1;j<=k;j++)
        {
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}




ample Input 0

10
Sample Output 0

