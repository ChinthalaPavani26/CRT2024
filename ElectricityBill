#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int unitsconsumed;
    scanf("%d",&unitsconsumed);
    int cost;
    if(unitsconsumed <= 200)
    {
        cost = unitsconsumed * 0.5;
        
    }
    else if(unitsconsumed <= 400)
    {
        cost = (unitsconsumed * 0.65) + 100;
    }
    else if(unitsconsumed <= 600)
    {
        cost = (unitsconsumed * 0.80) + 200;
        
     }
    else
    {
        cost = (unitsconsumed * 1.25) + 425;
        
    }
            printf("Rs.%d",cost);


    return 0;
}
